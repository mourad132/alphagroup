<%- include('./partials/header.ejs') %>
<%- include('./partials/admin-navbar.ejs') %>
<div class="container" style="margin-top: 50px;"> 
<main class="form-signin w-100 m-auto">
  <% if(event){ %>
    <form action="/events/update/<%= event._id %>" method="post" style="text-align: right;" enctype="multipart/form-data">
  <% } else { %>
    <form action="/events/create" method="post" style="text-align: right;" enctype="multipart/form-data">
  <% } %>
    <div style="display: flex; flex-direction: column; align-items: center;">
        <img class="mb-4" src="/Logo.png" alt="" width="75" height="75" style="margin: 0 auto;">
        <% if(event){ %>
          <h1 class="h3 mb-3 fw-normal">تعديل بيانات مؤتمر <%= event.name %></h1>
          <% } else { %>
          <h1 class="h3 mb-3 fw-normal">إنشاء مؤتمر جديد</h1>
        <% } %>
    </div>
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" placeholder="إسم المؤتمر" name="name" value="<%= event.name %>">
      <label for="floatingInput">إسم المؤتمر</label>
    </div>
    <div class="form-floating">
        <input type="text" class="form-control" id="floatingPassword" name="presentor" value="<%= event.presentor %>">
        <label for="floatingPassword">مقدم المؤتمر</label>
    </div>
    <div class="form-floating">
      <input type="file" class="form-control" id="floatingPassword" name="image"  value="<%= event.image %>" required>
      <label for="floatingPassword">إرفاق صورة</label>
    </div>
    <div class="form-floating">
        <textarea class="form-control" id="floatingPassword" placeholder="وصف المؤتمر" name="description">
          <%= event.description %>
        </textarea>
        <label for="floatingPassword">وصف المؤتمر</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control" id="floatingPassword" placeholder="المكان" name="place" value="<%= event.place %>">
        <label for="floatingPassword">المكان</label>
      </div>
      <div class="form-floating">
        <input type="date" class="form-control" id="floatingPassword" name="date" value="<%= event.date %>">
        <label for="floatingPassword">التاريخ</label>
      </div>
      <div class="form-floating">
        <input type="time" class="form-control" id="floatingPassword" name="time" value="<%= event.time %>">
        <label for="floatingPassword">الوقت</label>
      </div>
      <% if(event){ %>
        <button class="btn btn-primary btn-block" type="submit">تعديل بيانات مؤتمر <%= event.name %></button>
      <% } else { %>
        <button class="btn btn-primary btn-block" type="submit">إنشاء مؤتمر جديد</button>
      <% } %>
  </form>
</main>
<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</div>